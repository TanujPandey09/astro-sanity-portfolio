  .projects-card{
    background-color: var(--primary-color);
    border-radius: 10px;
  }

  /* .....Blog details */

  .blog-content a{
    color: var(--accent-color);
 
  }
  
  .blog-content a:hover{
    color:var(--bg2);
    transition: all ease-in 0.5s;
