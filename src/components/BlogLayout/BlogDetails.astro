---
const data = Astro.props;
import { Link } from "astro-link";
import { PortableText } from "astro-portabletext";
---

<main
  class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-transparent text-white antialiased"
>
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl">
    <article
      class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert"
    >
      <header class="mb-4 lg:mb-6 not-format">
        <h1
          class="mb-4 text-3xl font-extrabold leading-tightlg:mb-6 lg:text-4xl dark:text-white"
        >
          {data?.detailsData?.projectName}
        </h1>
      </header>

      <figure>
        <img src={`${data?.detailsData?.BackgroundImage?.asset?.url}`} alt="" />
      </figure>
      <p>
        <p>
          <PortableText
            class="md:text-lg text-base py-1 text-pretty mb-2 font-Roboto blog-content"
            value={data?.detailsData?.blogcontent}
          />
        </p>
      </p>
    </article>
  </div>

