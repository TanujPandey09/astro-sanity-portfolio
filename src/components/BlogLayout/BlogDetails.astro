---
const data = Astro.props;
import { Link } from "astro-link";
import { PortableText } from "astro-portabletext";

console.log("Details", data);
---

<section class="blog_details font-Roboto container mx-auto overflow-hidden md:p-12 px-2">
  <div class="grid md:grid-cols-3 grid-cols-1 md:gap-12">
    <div class="left-section col-span-2 text-white">
      <h1 class="md:text-3xl text-xl font-Roboto py-4 md:text-left  text-center">
        {data?.detailsData?.projectName}
      </h1>
      <img src={`${data?.detailsData?.BackgroundImage?.asset?.url}`} />
      <div class="px-4 py-4">
        <PortableText
          class="md:text-lg text-base py-1 text-pretty mb-2 font-Roboto blog-content"
          value={data?.detailsData?.blogcontent}
        />
      </div>
    </div>
    <div class="right-section col-span-1   text-white">
      <h1 class="text-3xl font-Roboto py-4 md:text-left text-center">
        Popular Blogs
      </h1>
      <Link 
      href={`/blogs/${data?.detailsData?.slug?.current}`}

      >
        <div class="grid md:grid-cols-2 grid-cols-1 justify-center gap-4">
          <img
            src={`${data?.detailsData?.BackgroundImage?.asset?.url}`}
            class="col-span-1 w-full rounded-sm"
          />
          <div class="col-span-1 justify-start">
            <h1 class="text-xl font-roboto md:text-left text-center">
              {data?.detailsData?.projectName}
            </h1>
          </div>
        </div><Link
      >
    </div>
  </div>
</section>
