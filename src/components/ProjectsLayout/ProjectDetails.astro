---
const data = Astro.props;
import { PortableText } from "astro-portabletext";

console.log("Details", data);
---

<section>
  <div
    class="projects_details text-white container mx-auto bg-transparent rounded-2xl m-12 shadow-2xl overflow-hidden p-12 md:p-12"
  >
    <h1 class="text-2xl py-4 text-center md:text-left">
      {data?.detailsData?.projectName}
    </h1>
    <img src={`${data?.detailsData?.BackgroundImage?.asset?.url}`} />
    <div class="px-4 py-4">
      <PortableText
        class="text-xl mb-2 font-Roboto"
        value={data?.detailsData?.projectcontent}
      />
    </div>
  </div>
</section>
