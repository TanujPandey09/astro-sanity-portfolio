---
const data = Astro.props;
import { PortableText } from "astro-portabletext";
---

<section>
  <div class="fixed inset-0 -z-10 bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 animate-gradient-shift"></div>
  <div
    class="projects_details text-white container mx-auto bg-transparent rounded-2xl  shadow-2xl overflow-hidden px-4 md:p-12"
  >
    <h1 class="text-2xl py-4 text-center md:text-left">
      {data?.detailsData?.projectName}
    </h1>
    <img src={`${data?.detailsData?.BackgroundImage?.asset?.url}`} class="max-w-auto" />
    <div class="px-4 py-4">
      <PortableText
        class="text-base py-1 mb-2 font-Roboto"
        value={data?.detailsData?.projectcontent}
      />
    </div>
  </div>
</section>
