---
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <Sidebar />

    <slot />
    <Footer />
    <div class="cursor"></div>
    <div class="cursor2"></div>

    <script src="https://unpkg.com/aos@next/dist/aos.js" is:inline></script>
    <script is:inline>
      AOS.init();
    </script>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap");

  /* @import url('https://fonts.googleapis.com/css2?family=Inter:slnt,wght@-10..0,100..900&family=Roboto+Slab:wght@100..900&display=swap'); */

  :root {
    /* --primary-color: #fafafa;
    --secondary-color: #686868;
    --accent-color: #292929;
    --bg1: #424242;
    --bg2: #131313; */

    /* bg2 */

    --primary-color: #ffffff;
    --secondary-color: #ced6de;
    --accent-color: #292929;
    --bg1: #040615;
    --bg2: #000000;
  }

  .cursor {
    width: 30px;
    height: 30px;
    border-radius: 100%;
    border: 1px solid var(--primary-color);
    transition: all 200ms ease-out;
    position: fixed;
    pointer-events: none;
    left: 0;
    top: 0;
    transform: translate(calc(-50% + 15px), -50%);
  }

  .cursor2 {
    width: 15px;
    height: 15px;
    border-radius: 100%;
    background-color: var(--secondary-color);
    opacity: 0.3;
    position: fixed;
    transform: translate(-50%, -50%);
    pointer-events: none;
    transition: width 0.3s, height 0.3s, opacity 0.3s;
  }

  .hover {
    background-color: transparent;
    opacity: 0.2;
  }

  .cursorinnerhover {
    width: 20px;
    height: 20px;
    opacity: 0.5;
  }
  body {
    background-color: rgba(4, 6, 21, 0.9);
    /* background: linear-gradient(145deg, rgba(4, 6, 21, 1), rgba(0, 0, 0, 0.8)); */
    background-size: center;
    height: 100%;
    width: 100%;
    overflow-x: hidden;
  }

  .home-section {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }
  .inner {
    width: 100%;
    height: 100%;
  }

  @keyframes bgGradient {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  /* ....Projects Cards */

  .projects-card {
    background-color: var(--bg1);
    border-radius: 10px;
    border-color: var(--bg2);
  }

  /* .....Blog details */

  .blog-content a {
    color: var(--accent-color);
  }

  .blog-content a:hover {
    color: var(--bg2);
    transition: all ease-in 0.5s;
    text-decoration: underline;
  }

  .blog-details-content strong {
    font-size: 22px;
    line-height: 36px;
    margin: 40px 0px;
  }

  .blog-details-content li {
    font-size: 16px;
    line-height: 24px;
    padding: 5px 0px;
  }

  /* >.Blog Page */

  /* .blog-content p {
    p: 0;
    m: 0;
    font-size: 16px;
    line-height:24px;
    text-align:justify;
    display: inline-block
    
  } */

  @media only screen and (max-width: 768px) {
    body {
      background: linear-gradient(90deg, #131313);
      background-repeat: no-repeat;
      height: 100%;
      animation: none; /* Disable animation on mobile devices */
    }

    /* Add additional mobile styles if needed */

    /* ....Projects Cards */

    /* .....Blog details */

    .blog-content a {
      color: var(--accent-color);
    }

    .blog-content a:hover {
      color: var(--bg2);
      transition: all ease-in 0.5s;
      text-decoration: underline;
    }
  }
</style>

<script>
  var cursor = document.querySelector(".cursor");
  var cursorinner = document.querySelector(".cursor2");
  var a = document.querySelectorAll("a");

  document.addEventListener("mousemove", function (e) {
    var x = e.clientX;
    var y = e.clientY;
    cursor.style.transform = `translate3d(calc(${e.clientX}px - 50%), calc(${e.clientY}px - 50%), 0)`;
  });

  document.addEventListener("mousemove", function (e) {
    var x = e.clientX;
    var y = e.clientY;
    cursorinner.style.left = x + "px";
    cursorinner.style.top = y + "px";
  });

  document.addEventListener("mousedown", function () {
    cursor.classList.add("click");
    cursorinner.classList.add("cursorinnerhover");
  });

  document.addEventListener("mouseup", function () {
    cursor.classList.remove("click");
    cursorinner.classList.remove("cursorinnerhover");
  });

  a.forEach((item) => {
    item.addEventListener("mouseover", () => {
      cursor.classList.add("hover");
    });
    item.addEventListener("mouseleave", () => {
      cursor.classList.remove("hover");
    });
  });
</script>
